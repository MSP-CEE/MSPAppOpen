@using Newtonsoft.Json.Linq
@using System.Reflection

@{
    ViewData["Title"] = "Profile";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table table-striped table-condensed" style="font-family: monospace">
    <tr>
        <th>Property</th>
        <th>Value</th>
    </tr>
    <tr>
        <td>photo</td>
        <td>
            @{
                if (ViewData["photo"] != null)
                {
                    <img style="margin: 5px 0; width: 150px" src="data:image/jpeg;base64, @ViewData["photo"]" />
                }
                else
                {
                    <h3>NO PHOTO</h3>
                    <p>Check user profile in Azure Active Directory to add a photo.</p>
                }
            }
        </td>
    </tr>
    @{
        Dictionary<string, string> data = ViewData["me"] as Dictionary<string, string>;

        foreach (KeyValuePair<string, string> toShow in data)
        {
            <tr>
                <td> @toShow.Key </td>
                <td> @toShow.Value </td>
            </tr>
        }
    }
</table>